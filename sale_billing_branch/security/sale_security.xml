<odoo>
    <record id="ir_rule_sale_order_allowed_billing_branches" model="ir.rule">
        <field name="model_id" ref="sale.model_sale_order" />
        <field
            name="domain_force"
        >['|',('billing_branch_id','=',False),('billing_branch_id','in', billing_branch_ids)]</field>
        <field name="name">Sales Orders from allowed billing branches</field>
        <field name="global" eval="True" />
        <field eval="0" name="perm_unlink" />
        <field eval="0" name="perm_write" />
        <field eval="1" name="perm_read" />
        <field eval="0" name="perm_create" />
    </record>
