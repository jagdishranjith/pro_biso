<odoo>
    <record id="view_quotation_tree" model="ir.ui.view">
        <field name="name">sale.order.tree</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree" />
        <field name="arch" type="xml">
            <field name="user_id" position="after">
                <field
                    name="billing_branch_id" string="Billing Branch"
                    groups="billing_branch.group_multi_billing_branch"
                />
            </field>
        </field>
    </record>
    <record id="view_order_tree" model="ir.ui.view">
        <field name="name">sale.order.tree</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree" />
        <field name="arch" type="xml">
            <field name="user_id" position="after">
                <field
                    name="billing_branch_id" string="Billing Branch"
                    groups="billing_branch.group_multi_billing_branch"
                />
            </field>
        </field>
    </record>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <field name="payment_term_id" position="after">
                <field
                    name="billing_branch_id" string="Billing Branch"
                    widget="selection"
                    groups="billing_branch.group_multi_billing_branch"
                    readonly="state not in ['draft', 'sent']"
                />
                <field
                    name="billing_branch_id" string="Billing Branch"
                    invisible="1"
                    groups="!billing_branch.group_multi_billing_branch"
                />
            </field>
            <field name="analytic_account_id" position="attributes">
                <attribute
                    name="domain"
                >['|', ('company_id', '=', False), ('company_id', '=', company_id), "|",("billing_branch_ids","in", billing_branch_id),("billing_branch_ids","=", False)]</attribute>
            </field>
            <field name="journal_id" position="attributes">
                <attribute
                    name="domain"
                >[('type', '=', 'sale'),"|",("billing_branch_id","=", billing_branch_id),("billing_branch_id","=", False)]</attribute>
            </field>
        </field>
    </record>
    <record id="view_sales_order_filter" model="ir.ui.view">
        <field name="name">sale.order.list.select</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sales_order_filter" />
        <field name="arch" type="xml">
            <filter name="my_sale_orders_filter" position="after">
                <filter
                    string="Billing Branch"
                    name="billing_branch_grouped"
                    groups="billing_branch.group_multi_billing_branch"
                    context="{'group_by':'billing_branch_id'}"
                />
            </filter>
            <field name="partner_id" position="after">
                <field
                    name="billing_branch_id" string="Billing Branch"
                    groups="billing_branch.group_multi_billing_branch"
                />
            </field>
        </field>
    </record>
</odoo>
