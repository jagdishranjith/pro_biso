<?xml version="1.0" encoding="utf-8" ?>
<odoo noupdate="1">
    <record model="ir.module.category" id="module_billing_branches">
        <field name="name">Billing Branchs Group</field>
        <field name="sequence">30</field>
    </record>
    <record id="group_multi_billing_branch" model="res.groups">
        <field name="name">Multiple Billing Branch</field>
        <field name="category_id" ref="module_billing_branches" />
    </record>
    <record id="group_manager_billing_branch" model="res.groups">
        <field name="name">Manager of Billing Branchs</field>
        <field name="implied_ids" eval="[(4, ref('group_multi_billing_branch'))]" />
        <field
            name="users"
            eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"
        />
        <field name="category_id" ref="module_billing_branches" />
    </record>
    <record id="billing_branch_comp_rule" model="ir.rule">
        <field name="name">Billing Branch Entry</field>
        <field name="model_id" ref="model_billing_branch" />
        <field name="global" eval="True" />
        <field name="domain_force">
            ['|',('company_id','=',False),('company_id', 'in', company_ids)]
        </field>
    </record>
    <record id="ir_rule_billing_branch_allowed_billing_branches" model="ir.rule">
        <field name="model_id" ref="model_billing_branch" />
        <field name="domain_force">[('id','in',billing_branch_ids)]</field>
        <field name="name">Allowed billing branches</field>
        <field eval="0" name="perm_unlink" />
        <field eval="0" name="perm_write" />
        <field eval="1" name="perm_read" />
        <field eval="0" name="perm_create" />
    </record>
</odoo>
