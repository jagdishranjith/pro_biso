<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_billing_branch_form" model="ir.ui.view">
        <field name="name">billing.branch.form</field>
        <field name="model">billing.branch</field>
        <field name="arch" type="xml">
            <form string="Billing Branch">
                <group name="main_group">
                    <field name="name" />
                    <field name="code" />
                    <field name="active" />
                    <field name="partner_id" />
                    <field name="company_id" groups="base.group_multi_company" />
                </group>
            </form>
        </field>
    </record>
    <record id="view_billing_branch_tree" model="ir.ui.view">
        <field name="name">billing.branch.tree</field>
        <field name="model">billing.branch</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code" />
                <field name="name" />
                <field name="company_id" groups="base.group_multi_company" />
            </tree>
        </field>
    </record>
    <record id="view_billing_branch_search" model="ir.ui.view">
        <field name="name">billing.branch.search</field>
        <field name="model">billing.branch</field>
        <field name="arch" type="xml">
            <search string="Search Billing Branch">
                <field name="name" string="Billing Branch" />
                <field name="code" string="Code" />
            </search>
        </field>
    </record>
    <record id="action_billing_branch_tree" model="ir.actions.act_window">
        <field name="name">Billing Branchs</field>
        <field name="res_model">billing.branch</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Click to start a new Billing Branch.</p>
        </field>
    </record>
    <menuitem
        action="action_billing_branch_tree"
        id="menu_action_billing_branch_tree"
        name="Billing Branch"
        parent="base.menu_users"
        groups="billing_branch.group_multi_billing_branch"
    />
</odoo>
