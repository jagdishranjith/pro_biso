<?xml version="1.0" ?>
<odoo>
    <record id="view_purchase_order_search" model="ir.ui.view">
        <field name="name">report.purchase.order.search</field>
        <field name="model">purchase.report</field>
        <field name="inherit_id" ref="purchase.view_purchase_order_search" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field
                    name="billing_branch_id" string="Billing Branch"
                    groups="billing_branch.group_multi_billing_branch"
                />
            </xpath>
            <xpath expr="//filter[@name='company']" position="after">
                <filter
                    string="Billing Branch"
                    name="group_billing_branch_id"
                    context="{'group_by': 'billing_branch_id'}"
                    groups="billing_branch.group_multi_billing_branch"
                />
            </xpath>
        </field>
    </record>
</odoo>
