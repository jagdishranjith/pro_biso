<?xml version="1.0" ?>
<odoo>
    <record id="purchase_order_tree" model="ir.ui.view">
        <field name="name">purchase_order_tree</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_tree" />
        <field name="arch" type="xml">
            <field name="origin" position="after">
                <field
                    name="billing_branch_id" string="Billing Branch"
                    groups="billing_branch.group_multi_billing_branch"
                />
            </field>
        </field>
    </record>
    <record id="purchase_order_form" model="ir.ui.view">
        <field name="name">purchase_order_form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form" />
        <field name="arch" type="xml">
            <field name="partner_ref" position="after">
                <field
                    name="requesting_billing_branch_id"
                    groups="billing_branch.group_multi_billing_branch"
                />
                <field
                    name="billing_branch_id" string="Billing Branch"/>
<!--                    groups="billing_branch.group_multi_billing_branch"-->
<!--                />-->
            </field>
            <field name="order_line" position="attributes">
                <attribute
                    name="context"
                >{'default_state': 'draft', 'billing_branch_id': billing_branch_id}</attribute>
            </field>
        </field>
    </record>
    <record id="view_purchase_order_filter" model="ir.ui.view">
        <field name="name">view_purchase_order_filter</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.view_purchase_order_filter" />
        <field name="arch" type="xml">
            <xpath expr="//group[@expand='0']" position="after">
                <filter
                    string="Billing Branch"
                    name="billing_branch_grouped"
                    context="{'group_by': 'billing_branch_id'}"
                    groups="billing_branch.group_multi_billing_branch"
                />
            </xpath>
            <field name="partner_id" position="after">
                <field
                    name="billing_branch_id" string="Billing Branch"
                    groups="billing_branch.group_multi_billing_branch"
                />
            </field>
        </field>
    </record>
</odoo>
