<?xml version="1.0" ?>
<odoo>
    <record id="purchase_order_line_tree" model="ir.ui.view">
        <field name="name">purchase_order_line_tree</field>
        <field name="model">purchase.order.line</field>
        <field name="inherit_id" ref="purchase.purchase_order_line_tree" />
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field
                    name="billing_branch_id" string="Billing Branch"
                    groups="billing_branch.group_multi_billing_branch"
                />
            </field>
        </field>
    </record>
    <record id="purchase_order_line_form" model="ir.ui.view">
        <field name="name">purchase_order_line_form</field>
        <field name="model">purchase.order.line</field>
        <field name="inherit_id" ref="purchase.purchase_order_line_form2" />
        <field name="arch" type="xml">
            <field name="price_unit" position="after">
                <field
                    name="billing_branch_id" string="Billing Branch"
                    groups="billing_branch.group_multi_billing_branch"
                />
            </field>
        </field>
    </record>
    <record id="purchase_order_line_search" model="ir.ui.view">
        <field name="name">purchase_order_line_search</field>
        <field name="model">purchase.order.line</field>
        <field name="inherit_id" ref="purchase.purchase_order_line_search" />
        <field name="arch" type="xml">
            <filter name="groupby_supplier" position="after">
                <filter
                    string="Billing Branch"
                    name="billing_branch_grouped"
                    groups="billing_branch.group_multi_billing_branch"
                    context="{'group_by': 'billing_branch_id'}"
                />
            </filter>
            <field name="partner_id" position="after">
                <field
                    name="billing_branch_id" string="Billing Branch"
                    groups="billing_branch.group_multi_billing_branch"
                />
            </field>
        </field>
    </record>
</odoo>
