<odoo>
    <record id="ir_rule_crm_team_allowed_billing_branches" model="ir.rule">
        <field name="model_id" ref="sales_team.model_crm_team" />
        <field name="domain_force">
            ['|',('billing_branch_id','=',False),('billing_branch_id','in',
            billing_branch_ids)]
        </field>
        <field name="name">Sales Teams from allowed billing branches</field>
        <field eval="0" name="perm_unlink" />
        <field eval="0" name="perm_write" />
        <field eval="1" name="perm_read" />
        <field eval="0" name="perm_create" />
        <field name="global" eval="True" />
    </record>
</odoo>
